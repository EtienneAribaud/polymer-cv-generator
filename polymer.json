{
  "entrypoint": "index.html",
  "shell": "src/cv-generator.html",
  "fragments": [
    "src/my-formation.html",
    "src/my-experience.html",
    "src/my-inputs.html",
    "src/my-error404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "name": "bundled",
    "bundle": true,
    "js": {
      "minify": true, 
      "compile": true
    },
    "css": {
      "minify": true
    },
    "html": {
      "minify": true
    }
  }]
}